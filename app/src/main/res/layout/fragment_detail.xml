<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/double_spacing"
    android:paddingRight="@dimen/double_spacing">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/detail_loading"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/parcelStatusRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/single_spacing"
        android:paddingRight="@dimen/single_spacing"
        android:clipToPadding="false"/>

</RelativeLayout>